//- _yummly.jade

h2 Yummly Recipes
if (yummly.length > 0)
	each recipe in yummly
		div.row-fluid.outlined(name=recipe.id)
			div.span3
				h5 #{recipe.recipeName}
				if recipe.smallImageUrls
					img.img-rounded(src=recipe.smallImageUrls[0])
				else
					img.img-rounded(src='http://2.media.collegehumor.cvcdn.com/61/99/a76136ca5bc269b973579f793a63d00c.jpg',style='width: 150px; height:100px')
			div.span9.leftBorder
				h6 Ingredients: 
						each ingredient in recipe.ingredients
							p.inline #{ingredient}, 
				button.pull-right.btn.btn-info(data-toggle='popover', title data-content='Some ol bullshit', data-original-title='The Tittle') See More
else
	p Yummly recipes go here