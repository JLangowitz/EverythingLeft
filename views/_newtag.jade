//- _newtag.jade
block scripts
	link(rel='stylesheet', href='/stylesheets/chosen.css')
	script(src='/javascripts/chosen.jquery.min.js', type='text/javascript');
	script(src='/javascripts/chosenHandle.js', type='text/javascript');

div(class='modal hide fade', id='myModal', tabindex='-1', role='dialog', aria-labeledby='myModalLabel')
	div(class='modal-header')
		button(type='button', class='close', data-dismiss='modal', aria-hidden='true') x
		h3(id='myModalLabel') Create Tag
	div(class='modal-body')
		h4 Add a new tag to the database!
			form(class='form-horizontal')
				fieldset
					div(class='control-group')
						label(class='control-label') Tag Name:
							input(type='text', placeholder='Describe your preference succintly!')
					div(class='control-group')
						label(class='control-label') Category:
							select(data-placebolder='Categorize your tag!', style='width: 350px', single, class='chzn-select')
								option Dietary Restriction
								option Discluded Ingredient

	div(class='modal-footer')
		button(class='btn', data-dismiss='modal', aria-hidden='true') Close
		button(class='btn btn-primary') Save Changes
