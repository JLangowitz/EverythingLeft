//- _parrecipe.jade

div.row-fluid.outlined(name="#{recipe._id}")
	div.span3
		h5 #{recipe.name}
		if recipe.image_small
			img.img-rounded(src="#{recipe.image_small}")
		else
			img.img-rounded(src='http://2.media.collegehumor.cvcdn.com/61/99/a76136ca5bc269b973579f793a63d00c.jpg',style='width: 150px; height:100px')
	div.span9.leftBorder
		h6 Ingredients: 
				each ingredient in recipe.ingredients
					p.inline #{ingredient}, 
		a(href='/recipe/#{recipe._id}')
			button.pull-right.btn.btn-info See Recipe