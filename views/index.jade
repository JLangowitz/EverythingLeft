extends layout

block content
	div(id="container")
		div(id="rightmain") 
			h3 Top Recipes
			if (top_recipes.length > 0)
				each recipe in top_recipes
					include _parrecipe
			else
				p There are no top recipes yet!
		div(id="centermain")
			h3 Search for Recipes 
			h3 or 
			h3 Add Your Own!
		div(id="leftmain")
			h3 Newest Editions
			if (newest_recipes.length > 0)
				each recipe in top_recipes
					include _parrecipe
			else
				p There are no new recipes yet!